body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence => { default("$(this.promise_filename)") };
      version => "1.0";
}

bundle agent init
{
  methods:
    "any" usebundle => dcs_fini("$(G.testfile).plain");
    "any" usebundle => dcs_fini("$(G.testfile).encrypted");
    "any" usebundle => dcs_fini("$(G.testfile).decrypted");
    "any" usebundle => generate_key;
    "any" usebundle => trust_key;
}

bundle agent test
{
  meta:
    "description"
      string => "Test that cf-keycrypt can still decrypt content encrypted at the time of initial implementation";


  vars:
      "text" string => "This secret sauce should be encrypted and decrypted.";

  files:
      "$(G.testfile).plain"
        create => "true",
        edit_defaults => empty,
        edit_line => insert_lines( "$(text)" );

  commands:
      "$(sys.cf_keycrypt)"
        args => "-d $(this.promise_dirname).priv -i $(this.promise_dirname).encrypted -o $(G.testfile).decrypted";

}

bundle agent check
{
  methods:
      "any"
        usebundle => dcs_check_diff("$(this.promise_dirname)/plaintext",
                                    "$(G.testfile).decrypted",
                                    "$(this.promise_filename)");
}
